---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  body {
    margin: 0;
  }

  @supports not (color: oklch(99% 0.02 0)) {
    /* Add fallback swatches here that are used */
    html {
      --swatch-1: hsl(0, 0%, 98.8%);
      --swatch-2: hsl(0, 0%, 88.6%);
      --swatch-9: hsl(60, 1.5%, 13.1%);
      --swatch-10: hsl(0, 0%, 6.7%);
    }
  }
  html {
    --hue: 220;
    /* Cool yellow color */
    /* TODO: find a way to integrate this with the pallete */
    /* oklch(95% 0.247 113.82) */

    --swatch-1: oklch(99% 0.02 var(--hue));
    --swatch-2: oklch(95% 0.05 var(--hue));
    --swatch-3: oklch(80% 0.2 var(--hue));
    --swatch-4: oklch(72% 0.25 var(--hue));
    --swatch-5: oklch(67% 0.31 var(--hue));
    --swatch-6: oklch(50% 0.27 var(--hue));
    --swatch-7: oklch(35% 0.25 var(--hue));
    --swatch-8: oklch(25% 0.2 var(--hue));
    --swatch-9: oklch(13% 0.2 var(--hue));
    --swatch-10: oklch(5% 0.1 var(--hue));

    --text-1: var(--swatch-1);
    --text-2: var(--swatch-2);
    --surface-1: var(--swatch-10);
    --surface-2: var(--swatch-9);
    --surface-3: var(--swatch-8);
  }

  @media (prefers-color-scheme: light) {
    html {
      --text-1: var(--swatch-10);
      --text-2: var(--swatch-9);
      --surface-1: var(--swatch-1);
      --surface-2: var(--swatch-2);
      --surface-3: var(--swatch-3);
      --surface-10: var(--swatch-10);
    }
  }
  html {
    font-family: system-ui, sans-serif;
    background: var(--surface-1);
    color: var(--text-1);
  }
  * {
    box-sizing: border-box;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
